{
  "manifest_version": 2,

  "name": "B Tracker",
  "description": "Track your spendings with B tracker.",
  "version": "1.0.1",
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "16": "icons/icon16.png"
  },

  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": false
  },

  "permissions": [
          "storage",
          "notifications",
          "contextMenus"
        ],

  "options_page": "options.html",
  "sidebar_action": {
	"default_icon": {
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"64": "icons/icon64.png"
	},
  "default_panel": "pannel.html"
}
}